<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:weightSum="1" >

        <RadioButton
            android:id="@+id/monday_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginBottom="12dp"
            android:text="Monday-Tuesday"
            android:textSize="22dp" />

        <RadioButton
            android:id="@+id/tuesday_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginBottom="12dp"
            android:text="Tuesday-Wednesday"
            android:textSize="22dp" />

        <RadioButton
            android:id="@+id/wednesday_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginBottom="12dp"
            android:text="Wednesday-Thursday"
            android:textSize="22dp" />

        <RadioButton
            android:id="@+id/thursday_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginBottom="12dp"
            android:text="Thursday-Friday"
            android:textSize="22dp" />

        <RadioButton
            android:id="@+id/friday_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginBottom="12dp"
            android:text="Friday-Saturday"
            android:textSize="22dp" />

        <RadioButton
            android:id="@+id/saturday_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginBottom="12dp"
            android:text="Saturday-Monday"
            android:textSize="22dp" />
    </RadioGroup>

</LinearLayout>