<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
  
  <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" > 
        
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                  
                    <LinearLayout
                        android:layout_width="960dp"
                        android:layout_height="280dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="100" >
                        
                        <fragment
                            android:id="@+id/EditInputDataFragment"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditInputDataFragment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50" />
                       
                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#294973"
                            android:orientation="vertical" />

                    <fragment
                              android:id="@+id/EditCol0FragmentID"
                              android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditCol0Fragment"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="20" /> 
                        
                          
                    </LinearLayout>
                     

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:background="#294973"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/innerTab1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <fragment
                            android:id="@+id/EditCol1FragmentID"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditCol1Fragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />
                        
                        
                        
						<!-- android:id="@+id/linearLayout2"  -->
                        <LinearLayout
                           
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#294973"
                            android:orientation="vertical" />

                        <fragment
                            android:id="@+id/EditCol2FragmentID"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditCol2Fragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/pserviceTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1" >

                    <LinearLayout
                        android:id="@+id/pserviceTypes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:baselineAligned="false" >

                        <fragment
                            android:id="@+id/EditSexFragmentID"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditSexFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.166" />

                        <LinearLayout
                            android:id="@+id/linearLayout7"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#294973"
                            android:orientation="vertical" />

                        <fragment
                            android:id="@+id/EditSkinFragmentID"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditSkinFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.166" />

                        <LinearLayout
                            android:id="@+id/linearLayout8"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#294973"
                            android:orientation="vertical" />

                        <fragment
                            android:id="@+id/EditHairFragmentID"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditHairFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.166" />

                        <LinearLayout
                            android:id="@+id/linearLayout9"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#294973"
                            android:orientation="vertical" />

                        <fragment
                            android:id="@+id/EditAgeFragmentID"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditAgeFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.166" />

                        <LinearLayout
                            android:id="@+id/linearLayout10"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#294973"
                            android:orientation="vertical" />

                        <fragment
                            android:id="@+id/EditHeightFragmentID"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditHeightFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.166" />

                        <LinearLayout
                            android:id="@+id/linearLayout11"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#294973"
                            android:orientation="vertical" />

                        <fragment
                            android:id="@+id/EditWeightFragmentID"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditWeightFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.166" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/otherIdentifyingFeaturesP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other/Comments"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            />

                        <EditText
                            android:id="@+id/otherIdentifyingFeaturesPEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/cserviceTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1" >

                    <LinearLayout
                        android:id="@+id/cserviceTypes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <fragment
                            android:id="@+id/EditEntryFragmentID"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditEntryFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.166" />

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#294973"
                            android:orientation="vertical" />

                        <fragment
                            android:id="@+id/EditWallFragmentID"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditWallFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.166" />

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#294973"
                            android:orientation="vertical" />

                        <fragment
                            android:id="@+id/EditFloorFragmentID"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditFloorFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.33" />

                        <LinearLayout
                            android:id="@+id/linearLayout5"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#294973"
                            android:orientation="vertical" />

                        <fragment
                            android:id="@+id/EditDoorFragmentID"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditDoorFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.166" />

                        <LinearLayout
                            android:id="@+id/linearLayout6"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#294973"
                            android:orientation="vertical" />

                        <fragment
                            android:id="@+id/EditLockFragmentID"
                            android:name="com.aetherti.legaldelivery.gr.antalakas.android.LegalDelivery.Edit.EditLockFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.166" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/otherIdentifyingFeaturesC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                           
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other/Comments"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/opaque_green" />

                        <EditText
                            android:id="@+id/otherIdentifyingFeaturesCEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <!--
            <AnalogClock android:id="@+id/tab1"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
			/>
			<Button android:id="@+id/tab2"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text="A semi-random button"
			/>
            -->

        </FrameLayout>
         </HorizontalScrollView> 
    </LinearLayout>

</TabHost>